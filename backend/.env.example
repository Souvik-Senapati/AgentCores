# =============================================================================
# AgentCores Enterprise Configuration
# Built for MVP simplicity, designed for billion-dollar platform scale
# =============================================================================

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Application
APP_NAME=AgentCores
APP_VERSION=1.0.0
APP_DESCRIPTION="AI Agent Orchestration Platform - MVP with Enterprise DNA"

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4  # Gunicorn workers for production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database (PostgreSQL recommended for enterprise)
DATABASE_URL=postgresql://agent_user:agent_password@localhost:5432/agentcores_db

# Alternative component-based configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agentcores
DB_USER=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public

# Database Pool Settings (Enterprise)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION (Caching & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=20

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours
REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-bytes-base64-encoded
HASH_ALGORITHM=sha256

# Security Headers
ALLOWED_HOSTS=localhost,127.0.0.1,*.agentcores.com
CORS_ORIGINS=http://localhost:3000,https://app.agentcores.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# OpenRouter (Primary)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_SITE_URL=https://agentcores.com
OPENROUTER_SITE_NAME=AgentCores

# OpenAI (Secondary)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic (Tertiary)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI (Enterprise)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# MULTI-TENANCY CONFIGURATION
# =============================================================================
# Default Tenant Settings
DEFAULT_TENANT_ID=default
DEFAULT_TENANT_NAME=Default Organization

# Tenant Limits (MVP defaults, enterprise customizable)
DEFAULT_MAX_AGENTS=10
DEFAULT_MAX_TASKS_PER_HOUR=1000
DEFAULT_MAX_MONTHLY_COST=1000.0

# Data Residency
DEFAULT_DATA_RESIDENCY=us-east-1

# =============================================================================
# TASK EXECUTION ENGINE
# =============================================================================
# Worker Configuration
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300
MAX_TASK_RETRIES=3
TASK_CLEANUP_INTERVAL_MINUTES=60

# Queue Configuration
TASK_QUEUE_SIZE=1000
PRIORITY_QUEUE_ENABLED=true

# =============================================================================
# EVENT SERVICE CONFIGURATION
# =============================================================================
# Event Processing
EVENT_STORE_ENABLED=true
EVENT_STORE_MAX_EVENTS=10000
EVENT_RETENTION_HOURS=168  # 7 days

# Event Publishing
EVENT_ASYNC_PROCESSING=true
EVENT_BATCH_SIZE=100
EVENT_PUBLISH_TIMEOUT=30

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Logging
LOG_FORMAT=json  # json, text
LOG_FILE=logs/agentcores.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Tracing (Enterprise)
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACE_SAMPLE_RATE=0.1

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================
# Compliance
COMPLIANCE_MODE=basic  # basic, enterprise, regulated
AUDIT_LOGGING=true
DATA_ENCRYPTION_AT_REST=false
PII_DETECTION=false

# Backup & Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# High Availability
HA_ENABLED=false
CLUSTER_NODE_ID=node-1
LEADER_ELECTION=false

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Email Service (Enterprise notifications)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@agentcores.com

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# External APIs
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRY_ATTEMPTS=3

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development
RELOAD=true  # Auto-reload in development
DEBUG_TOOLBAR=false

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/agentcores_test

# =============================================================================
# CLOUD PROVIDER CONFIGURATION (Enterprise)
# =============================================================================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=agentcores-storage

# Azure Configuration
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# FEATURE FLAGS (Enterprise)
# =============================================================================
# Core Features
FEATURE_MULTI_TENANCY=true
FEATURE_ANALYTICS=true
FEATURE_ADVANCED_TEMPLATES=true
FEATURE_WORKFLOW_ENGINE=false

# Enterprise Features
FEATURE_SSO=false
FEATURE_RBAC=false
FEATURE_AUDIT_LOGS=true
FEATURE_COST_OPTIMIZATION=true
FEATURE_AUTO_SCALING=false

# AI Features
FEATURE_MULTI_PROVIDER=true
FEATURE_COST_TRACKING=true
FEATURE_PROMPT_OPTIMIZATION=false
FEATURE_MODEL_ROUTING=false

# =============================================================================
# PERFORMANCE TUNING (Enterprise)
# =============================================================================
# Database Performance
DB_STATEMENT_TIMEOUT=30000  # 30 seconds
DB_LOCK_TIMEOUT=10000  # 10 seconds
DB_QUERY_CACHE_SIZE=1000

# Application Performance
CACHE_TTL_SECONDS=3600  # 1 hour
SESSION_TIMEOUT_MINUTES=480  # 8 hours
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# SECURITY HARDENING (Enterprise)
# =============================================================================
# Security Policies
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Security
SECURE_COOKIES=true
HTTPONLY_COOKIES=true
SAMESITE_COOKIES=strict

# API Security
API_KEY_ROTATION_DAYS=90
IP_WHITELIST_ENABLED=false
GEO_BLOCKING_ENABLED=false

# =============================================================================
# COST MANAGEMENT (Enterprise)
# =============================================================================
# Cost Limits
MONTHLY_COST_ALERT_THRESHOLD=800.0
DAILY_COST_ALERT_THRESHOLD=50.0
COST_TRACKING_ENABLED=true

# Provider Cost Limits
OPENROUTER_MONTHLY_LIMIT=500.0
OPENAI_MONTHLY_LIMIT=300.0
ANTHROPIC_MONTHLY_LIMIT=200.0